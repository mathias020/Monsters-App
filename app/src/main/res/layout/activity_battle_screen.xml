<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jonashr.monsters.BattleScreen"
    android:background="@drawable/mainscreen_bg_faded"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:keepScreenOn="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/battlescreen_logo"
        android:id="@+id/battlescreen_logo" />

    <RelativeLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_below="@id/battlescreen_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <!-- Opponents monsters !-->
    <RelativeLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/opponentMonsters"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:id="@+id/battle_top_first_monster_health"
                android:background="#d6ff0600"
                android:padding="4dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text=""
                />

            <RelativeLayout
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_below="@id/battle_top_first_monster_health"
                android:id="@+id/battle_top_first_monster"
                android:layout_marginRight="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/frame_mythic">

                <ImageView
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/battle_top_first_monster_icon"
                    android:background="@drawable/beu_dragon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/battle_top_first_monster_element"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/earth" />
            </RelativeLayout>
            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="4dp"
                android:background="#90000000"
                android:layout_width="100dp"
                android:layout_marginRight="5dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_below="@id/battle_top_first_monster"
                android:id="@+id/battle_top_first_monster_tag"
                android:gravity="center_horizontal"
                android:text=""/>


            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="100dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/battle_top_second_monster_health"
                android:layout_toRightOf="@id/battle_top_first_monster_health"
                android:background="#d6ff0600"
                android:padding="4dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text=""
                />

            <RelativeLayout
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_below="@id/battle_top_second_monster_health"
                android:id="@+id/battle_top_second_monster"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/battle_top_first_monster"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/frame_mythic">
                <ImageView
                    android:id="@+id/battle_top_second_monster_icon"
                    android:background="@drawable/beu_dragon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/battle_top_second_monster_element"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/earth" />
            </RelativeLayout>
            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="4dp"
                android:background="#90000000"
                android:layout_marginRight="5dp"
                android:layout_width="100dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/battle_top_first_monster_tag"
                android:layout_below="@id/battle_top_second_monster"
                android:id="@+id/battle_top_second_monster_tag"
                android:gravity="center_horizontal"
                android:text=""/>

            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="100dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/battle_top_third_monster_health"
                android:layout_toRightOf="@id/battle_top_second_monster_health"
                android:background="#d6ff0600"
                android:padding="4dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text=""
                />

            <RelativeLayout
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_below="@id/battle_top_third_monster_health"
                android:id="@+id/battle_top_third_monster"
                android:layout_toRightOf="@id/battle_top_second_monster"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/frame_mythic">
                <ImageView
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/battle_top_third_monster_icon"
                    android:background="@drawable/beu_dragon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/battle_top_third_monster_element"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/earth" />
            </RelativeLayout>
            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="4dp"
                android:background="#90000000"
                android:layout_width="100dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/battle_top_second_monster_tag"
                android:layout_below="@id/battle_top_third_monster"
                android:id="@+id/battle_top_third_monster_tag"
                android:gravity="center_horizontal"
                android:text=""/>

        <TextView
            android:clipChildren="false"
            android:clipToPadding="false"
            android:visibility="visible"
            android:id="@+id/waitingForOpponent"
            android:layout_width="310dp"
            android:layout_height="170dp"
            android:textSize="25sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:text="Waiting for opponent..."
            android:background="#D1000000"
            />
        </RelativeLayout>

    <!-- Opponents monsters !-->


    <!-- My monsters !-->
        <RelativeLayout
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_below="@id/opponentMonsters"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:id="@+id/battle_bottom_first_monster_health"
                android:background="#d6ff0600"
                android:padding="4dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text=""
                />

            <RelativeLayout
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_below="@id/battle_bottom_first_monster_health"
                android:id="@+id/battle_bottom_first_monster"
                android:layout_marginRight="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/frame_mythic">

                <ImageView
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/battle_bottom_first_monster_icon"
                    android:background="@drawable/beu_dragon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/battle_bottom_first_monster_element"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/earth" />
            </RelativeLayout>
            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="4dp"
                android:background="#90000000"
                android:layout_width="100dp"
                android:layout_marginRight="5dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_below="@id/battle_bottom_first_monster"
                android:id="@+id/battle_bottom_first_monster_tag"
                android:gravity="center_horizontal"
                android:text=""/>


            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="100dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/battle_bottom_second_monster_health"
                android:layout_toRightOf="@id/battle_bottom_first_monster_health"
                android:background="#d6ff0600"
                android:padding="4dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text=""
                />

            <RelativeLayout
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_below="@id/battle_bottom_second_monster_health"
                android:id="@+id/battle_bottom_second_monster"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/battle_bottom_first_monster"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/frame_mythic">
                <ImageView
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/battle_bottom_second_monster_icon"
                    android:background="@drawable/beu_dragon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/battle_bottom_second_monster_element"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/earth" />
            </RelativeLayout>
            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="4dp"
                android:background="#90000000"
                android:layout_marginRight="5dp"
                android:layout_width="100dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/battle_bottom_first_monster_tag"
                android:layout_below="@id/battle_bottom_second_monster"
                android:id="@+id/battle_bottom_second_monster_tag"
                android:gravity="center_horizontal"
                android:text=""/>

            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="100dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/battle_bottom_third_monster_health"
                android:layout_toRightOf="@id/battle_bottom_second_monster_health"
                android:background="#d6ff0600"
                android:padding="4dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text=""
                />

            <RelativeLayout
                android:orientation="vertical"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_below="@id/battle_bottom_third_monster_health"
                android:id="@+id/battle_bottom_third_monster"
                android:layout_toRightOf="@id/battle_bottom_second_monster"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/frame_mythic">
                <ImageView
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/battle_bottom_third_monster_icon"
                    android:background="@drawable/beu_dragon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/battle_bottom_third_monster_element"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/earth" />
            </RelativeLayout>
            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="4dp"
                android:background="#90000000"
                android:layout_width="100dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/battle_bottom_second_monster_tag"
                android:layout_below="@id/battle_bottom_third_monster"
                android:id="@+id/battle_bottom_third_monster_tag"
                android:gravity="center_horizontal"
                android:text=""/>
        </RelativeLayout>
    <!-- My monsters !-->
    </RelativeLayout>
    <!-- Battle menu !-->
        <RelativeLayout
            android:clipChildren="false"
            android:clipToPadding="false"
            android:id="@+id/battleMenu"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:background="#F1FFFFFF"
            android:layout_height="110dp">
            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:textSize="19sp"
                android:text="SELECT MONSTER"
                android:gravity="center_horizontal"
                android:id="@+id/selectMonster"
                android:layout_height="wrap_content" />
            <TextView
                android:clipChildren="false"
                android:clipToPadding="false"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:textSize="19sp"
                android:textColor="#F80000"
                android:text="SELECT MONSTER TO ATTACK"
                android:id="@+id/selectOpponent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:clipChildren="false"
                android:clipToPadding="false"
                android:visibility="invisible"
                android:id="@+id/attackMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:background="@drawable/tv_button"
                    android:textAllCaps="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/monster_attack_1"
                    android:text="Attack 1" />
                <TextView
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:background="@drawable/tv_button"
                    android:textAllCaps="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:id="@+id/monster_attack_2"
                    android:text="Attack 2" />

                <TextView
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:background="@drawable/tv_button"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:id="@+id/monster_attack_3"
                    android:text="Attack 3" />

                <TextView
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:background="@drawable/tv_button"
                    android:textAllCaps="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:id="@+id/monster_attack_back"
                    android:gravity="center_vertical"
                    android:text="\u00AB Back" />
            </RelativeLayout>
        </RelativeLayout>
    <!-- Battle menu !-->

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/endGameView"
        android:background="#90000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff7ee"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            android:textStyle="bold"
            android:id="@+id/gameEndText"
            android:text="! YOU WIN !"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:text="Click anywhere to continue"
            android:layout_below="@id/gameEndText" />
    </RelativeLayout>

</RelativeLayout>
