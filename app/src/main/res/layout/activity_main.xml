<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/mainscreen_bg">

    <ImageView
        android:layout_marginTop="10dp"
        android:background="@drawable/monsters_logo"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/mainLogo"
        />

    <LinearLayout
        android:layout_marginTop="65dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/mainLogo"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_findbattle"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_findbattle"/>

        <ImageView
            android:id="@+id/btn_mycollection"
            android:layout_marginTop="25dp"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_mycollection"/>

        <ImageView
            android:id="@+id/btn_statistics"
            android:layout_marginTop="25dp"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_statistics"/>
    </LinearLayout>

